<h1>Listing Posts</h1>

<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Content</th>
		<th>Author</th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= post.id %></td>
		<td><%= link_to post.title, action: 'show', id: post %></td>
		<td><%= post.content[0,50] %></td>
		<td><%= post.user.name %></td>
	</tr>
	<% end %>
</table>

